<h1>All Companies</h1>
<%= link_to  "New Company", new_company_path %>
<table class="comany_table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Country</th>
      </tr>
    </thead>
    <tbody>
      <%@companies.each do |company|%>  
        <tr>
          <td><%=company.name%> </td>
          <td><%=company.country%> </td>
          <td><%= link_to  "show", company_path(company.id) %> </td>
        </tr>
      <%end%>
    </tbody>
  </table>
